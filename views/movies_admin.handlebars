    <div class="modal fade" id="movies_add-modal" tabindex="-1" aria-labelledby="movies_add-label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content add_modal">
                <div class="modal-header">
                    <h4 class="modal-title" id="movies_add-label">Add Movie Theatre</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Theatre Name</p>
                    <div class="input-group flex-nowrap">
                        <input type="text" id="theatre_name" class="form-control" placeholder="Enter theatre name">
                    </div>
                    <p>Theatre Address</p>
                    <div class="input-group flex-nowrap">
                        <input type="text" id="theatre_address" class="form-control"
                            placeholder="Enter theatre address">
                    </div>
                    <p>Add Theatre Image</p>
                    <div class="mb-3 add_image-outer">
                        <input class="form-control" type="file" id="theatre_img">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" id="btn_add-theatre" onclick="addmoviesTableRow()" class="btn btn-primary"
                        data-bs-dismiss="modal">Add Theatre</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="movies_edit-modal" tabindex="-1" aria-labelledby="movies_edit-label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content add_modal">
                <div class="modal-header">
                    <h4 class="modal-title" id="movies_edit-label">Edit Movie Theatre</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Theatre Name</p>
                    <div class="input-group flex-nowrap">
                        <input type="text" id="theatre_name-edit" class="form-control" placeholder="Enter theatre name">
                    </div>
                    <p>Theatre Address</p>
                    <div class="input-group flex-nowrap">
                        <input type="text" id="theatre_address-edit" class="form-control"
                            placeholder="Enter theatre address">
                    </div>
                    <div class="mb-3 add_image-outer">
                        <p>Edit Theatre Image</p>
                        <input class="form-control" type="file" id="theatre_img-edit">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" id="btn_edit-theatre" onclick="editTheatreTableRow()" class="btn btn-primary"
                        data-bs-dismiss="modal">Edit Theatre</button>
                </div>
            </div>
        </div>
    </div>
