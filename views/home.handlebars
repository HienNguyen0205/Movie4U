<div id="main_carousel" class="carousel carousel-dark slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        {{#each carousel}}
        {{#if this.index}}
        <div class="carousel-item">
            <img src="{{this.src}}" class="d-block w-100 carousel_img" alt="..." data-bs-interval="6000">
        </div>
        {{else}}
        <div class="carousel-item active">
            <img src="{{this.src}}" class="d-block w-100 carousel_img" alt="..." data-bs-interval="6000">
        </div>
        {{/if}}
        {{/each}}
    </div>
</div>
<div class="container py-5">
    <div class="title_wrap">
        <h3>Opening this week</h3>
        <div class="search_bar">
            <input class="search_input" type="search" placeholder="Search for movie">
            <div class="search_icon_wrap">
                <i class="fa-solid fa-magnifying-glass search_icon"></i>
            </div>
        </div>
    </div>
    <hr>
    <div class="d-flex mb-4 align-items-center">
        <a class="ms-auto me-1" href="/Movie">See more..</a>
    </div>
    <div class="list_movie">
        {{#each movies}}
        <div class="movie_wrap" data-movie="{{this.name}}">
            <img class="movie_poster" src="{{this.src}}" alt="movie">
            <div class="py-3">
                <p class="movie_name">{{this.name}}</p>
                <span class="movie_duration">{{this.duration}}</span>
                <span class="movie_split mx-1">|</span>
                <span class="movie_category">{{this.category}}</span>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="title_wrap">
        <h3>Coming soon</h3>
    </div>
    <hr>
    <div class="list_movie">
        {{#each comingMovies}}
        <div class="movie_wrap position-relative">
            <img class="movie_poster" src="{{this.src}}" alt="movie">
            <div class="release_date"><i class="fa-solid fa-calendar-days"></i> {{this.release}}</div>
            <div class="p-3">
                <p class="movie_name">{{this.name}}</p>
                <span class="movie_duration">{{this.duration}}</span>
                <span class="movie_split mx-1">|</span>
                <span class="movie_category">{{this.category}}</span>
            </div>
        </div>
        {{/each}}
    </div>
    <h3 class="text-center my-4">New Trailer</h3>
    <hr>
    <div class="list_trailer">
        {{#each trailers}}
        <div class="trailer_item" data-bs-toggle="modal" data-bs-target="#trailer" data-src="{{this.src}}">
            <div class="trailer_poster_wrap">
                <img src="{{this.poster}}" alt="trailer">
                <i class="fa-regular fa-circle-play"></i>
            </div>
            <h5>{{this.name}}</h5>
        </div>
        {{/each}}
    </div>
    <div id="trailer" class="modal fade" tabindex="-1" aria-modal="true" aria-hidden="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered" style="max-width: none; width: fit-content;">
            <div class="modal-content">
                <div class="modal-header justify-content-end">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <iframe id="trailer_iframe" width="712px" height="400px" src="" frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                        allowfullscreen>
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</div>